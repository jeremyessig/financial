{% extends 'layout/main.html.twig' %}

{% block title %}Transaction index{% endblock %}

{% block main %}

    <twig:Toolbar>
        <twig:ToolbarButton toggle="modal" target="popupTransactionForm">
            <twig:ux:icon name="bi:file-earmark-plus" />
            <span>Nouveau</span>
        </twig:ToolbarButton>
        <twig:ToolbarButton color="danger">
            <twig:ux:icon name="bi:trash" />
            <span>Supprimer</span>
        </twig:ToolbarButton>
        <twig:ToolbarButton>
            <twig:ux:icon name="lucide:columns-2" />
            <span>Colonnes</span>
        </twig:ToolbarButton>
        <twig:ToolbarButton>
            <twig:ux:icon name="lucide:columns-2" />
            <span>Actualiser</span>
        </twig:ToolbarButton>        
            
    </twig:Toolbar>

<div class="d-flex h-100 gap-3">

    <twig:Wrapper>
        <twig:block name="header">
            <h3 class="h3">Toutes les lignes</h3>
            <div class="d-flex">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="basic-addon2">
                    
                    <button type="button" class="input-group-text" id="basic-addon2"><twig:ux:icon name="bi:search" style="width:16px;"/></button>
                </div>
            </div>
        </twig:block>
        <twig:block name="body">
             <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                        <th scope="col"><input class="form-check-input" type="checkbox" value="" id="all"></th>
                        <th scope="col">Date</th>
                        <th scope="col">Montant</th>
                        <th scope="col">Banque</th>
                        <th scope="col">Titre</th>
                        <th scope="col">Cat√©gorie</th>
                        <th scope="col">Description</th>
                        <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for transaction in transactions %}
                            <tr>
                            <td scope="row">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="{{ transaction.id }}">
                            </div>
                            </td>
                            <td>{{ transaction.date|date("d/m/Y") }}</td>
                            <td class="{{ transaction.type == 'income' ? 'text-success' : 'text-danger' }} text-end">{{ (transaction.value / 100)|format_currency('EUR') }}</td>
                            <td> 
                               <span class="badge rounded-pill text-bg-{{ transaction.establishment.colorCss }}">{{ transaction.establishment.name }}</span>
                            </td>
                            <td>{{ transaction.title }}</td>
                            <td>
                                <span class="badge rounded-pill text-bg-{{ transaction.category.colorCss }}">{{ transaction.category.name }}</span>
                            </td>
                            <td>{{ transaction.description }}</td>
                            <td>
                                <a class="btn btn-secondary btn-sm px-3" href="{{ path('app_transaction_show', {'id': transaction.id}) }}"><twig:ux:icon name="bi:eye-fill" /></a>
                                <a class="btn btn-secondary btn-sm px-3" href="{{ path('app_transaction_edit', {'id': transaction.id}) }}"><twig:ux:icon name="bi:pencil-square" /></a>
                            </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8">no records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

        </twig:block>
        <twig:block name="footer">
            <span>Nb de lignes: 100 +</span>
            <div class="navigation">
    {{ knp_pagination_render(transactions) }}
</div>
        </twig:block>
    </twig:Wrapper>
</div>

    {% include 'transaction/_popup_form.html.twig' %}

{% endblock %}
