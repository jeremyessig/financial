                {% else %}
                    {# <tr>
                        <td colspan="8">no records found</td>
                    </tr>
                {% endfor %}
                </div> #}

        </twig:block>
        <twig:block name="footer">
            <div class="d-flex gap-3 align-items-center">
                <span>Nb de lignes: {{ total_item_Count }}</span>
                <button type="button" class="btn btn-outline-primary d-flex align-items-center justify-content-center gap-3">
                    
                    <span>Exporter les données</span>
                </button>
            </div>
            <div class="navigation">
            {{ knp_pagination_render(transactions) }}
</div>
        </twig:block>
    </twig:Wrapper>
</div>

    {% include 'transaction/_popup_form.html.twig' %}

{% endblock %}
