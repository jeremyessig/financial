{% extends 'layout/main.html.twig' %}

{% block title %}Transaction index{% endblock %}

{% block main %}

    <twig:Toolbar>
        <twig:ToolbarButton toggle="modal" target="popupTransactionForm">
            <twig:ux:icon name="bi:file-earmark-plus" />
            <span>Nouveau</span>
        </twig:ToolbarButton>
        <twig:ToolbarButton color="danger">
            <twig:ux:icon name="bi:trash" />
            <span>Supprimer</span>
        </twig:ToolbarButton>
        <twig:ToolbarButton>
            <twig:ux:icon name="lucide:columns-2" />
            <span>Colonnes</span>
        </twig:ToolbarButton>
        <twig:ToolbarButton>
            <twig:ux:icon name="lucide:columns-2" />
            <span>Actualiser</span>
        </twig:ToolbarButton>        
            
    </twig:Toolbar>

<div class="d-flex h-100 gap-3">

    <twig:Wrapper>
        <twig:block name="header">
            <h3 class="h3">Toutes les lignes</h3>
            <div class="d-flex gap-3">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="basic-addon2">
                    
                    <button type="button" class="input-group-text" id="basic-addon2"><twig:ux:icon name="bi:search" style="width:16px;"/></button>
                </div>
            </div>
        </twig:block>
        <twig:block name="body">
            <table class="table table-hover">
                <thead>
                    <tr>
                    <th scope="col">
                        <div class="d-flex">
                            <input class="form-check-input" type="checkbox" value="" id="all">
                        </div>
                    </th>
                    <th scope="col">
                        <div class="d-flex">
                            {{ knp_pagination_sortable(transactions, 'Date', 't.date') }}
                        </div>
                    </th>
                    <th scope="col">
                        <div class="d-flex">
                            {{ knp_pagination_sortable(transactions, 'Montant', 't.value') }}
                        </div>
                    </th>
                    <th scope="col">
                        <div class="d-flex">
                            {{ knp_pagination_sortable(transactions, 'Banque', 'e.name') }}
                        </div>
                    </th>
                    <th scope="col">
                        <div class="d-flex">
                            {{ knp_pagination_sortable(transactions, 'Titre', 't.title') }}
                        </div>
                    </th>
                    <th scope="col">
                        <div class="d-flex">
                            {{ knp_pagination_sortable(transactions, 'Catégories', 'c.name') }}
                        </div>
                    </th>
                    <th scope="col">
                        <div class="d-flex">
                            Description
                        </div>
                    </th>
                    <th scope="col">
                        <div class="d-flex">
                            Actions
                        </div>
                    </th>
                    </tr>
                </thead>
                <tbody>
                    {% for transaction in transactions %}
                        <tr>
                            <td scope="row" style="width: 40px;">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="{{ transaction.id }}">
                                </div>
                            </td>
                            <td style="width: 100px;">{{ transaction.date|date("d/m/Y") }}</td>
                            <td class="{{ transaction.type == 'income' ? 'text-success' : 'text-danger' }} text-end" style="width: 140px;">{{ (transaction.value / 100)|format_currency('EUR') }}</td>
                            <td style="width: 140px;"> 
                                <span class="badge rounded-pill text-bg-{{ transaction.establishment.colorCss }}">{{ transaction.establishment.name }}</span>
                            </td>
                            <td>{{ transaction.title }}</td>
                            <td>
                                <span class="badge rounded-pill text-bg-{{ transaction.category.colorCss }}">{{ transaction.category.name }}</span>
                            </td>
                            <td>{{ transaction.description }}</td>
                            <td>
                            <div class="d-flex gap-1">
                                <a class="btn-round" href="{{ path('app_transaction_show', {'id': transaction.id}) }}"><twig:ux:icon name="bi:eye-fill" /></a>
                                <a class="btn-round" href="{{ path('app_transaction_edit', {'id': transaction.id}) }}"><twig:ux:icon name="bi:pencil-square" /></a>
                            </div>
                                
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </twig:block>
        <twig:block name="footer">
            <div class="d-flex gap-3 align-items-center">
                <span>Nb de lignes: {{ total_item_Count }}</span>
                <button type="button" class="btn btn-outline-primary d-flex align-items-center justify-content-center gap-3">
                    
                    <span>Exporter les données</span>
                </button>
            </div>
            <div class="d-flex gap-3 align-items-center">
                <div data-controller="item-per-page">
                    <select class="form-select" data-action="change->item-per-page#setValue" data-item-per-page-target="source" aria-label="Default select example">
                        <option selected value="10">10 lignes</option>
                        <option value="25">25 lignes</option>
                        <option value="50">50 lignes</option>
                    </select>           
                </div>
                <div class="navigation m-0">
                    {{ knp_pagination_render(transactions) }}
                </div>
            </div>
        </twig:block>
    </twig:Wrapper>
</div>

    {% include 'transaction/_popup_form.html.twig' %}

{% endblock %}
