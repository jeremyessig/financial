<div{{ attributes }} class="card w-100 h-100">
    <div class="card-header d-flex flex-column flex-lg-row gap-3 py-3 justify-content-between align-items-center">
        {% block header %}{% endblock %}
    </div>
    <div class="card-body overflow-auto h-0">
        {% block body %} {% endblock %}
    </div>
    <div class="card-footer d-flex flex-column flex-lg-row gap-3 justify-content-between align-items-center">
        {% block footer %}{% endblock %}
    </div>
</div>
